<%- include('partials/header') %>

<!-- Main Content -->
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto">
        
        <!-- Report Header (Dark mode updated) -->
        <div class="mb-8">
            <span class="text-sm text-brand-green font-bold uppercase">Special Report</span>
            <h1 class="text-4xl lg:text-5xl font-extrabold text-brand-dark dark:text-white mt-2 mb-4">
                <%= report.title %>
            </h1>
        </div>

        <!-- Featured Image -->
        <div class="mb-8">
            <img class="w-full h-auto object-cover rounded-xl shadow-lg" 
                 src="<%= report.imageUrl %>" 
                 onerror="this.src='https://placehold.co/800x600/e2e8f0/334155?text=Image+Error'" 
                 alt="<%= report.title %>">
        </div>

        <!-- Report Content (Yeh 'prose' class se automatically dark mode lega) -->
        <div class="prose prose-lg max-w-none text-gray-700 text-lg leading-relaxed dark:text-gray-300" style="white-space: pre-wrap;">
            <%= report.content %>
        </div>

        <!-- Back Button (Dark mode updated) -->
        <div class="mt-12 border-t border-gray-200 dark:border-gray-700 pt-8">
            <a href="/" class="font-bold text-brand-dark dark:text-gray-200 hover:text-brand-green transition-colors">
                &larr; Back to Homepage
            </a>
        </div>

    </div>
</div>

<%- include('partials/footer') %>