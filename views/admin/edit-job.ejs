<%- include('../partials/admin-header') %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Dark class hata di -->
    <h1 class="text-3xl font-bold text-esg-dark mb-8">Edit Job</h1>

    <!-- Dark class hata di -->
    <form action="/admin/jobs/edit/<%= job.id %>" method="POST" class="bg-white p-8 rounded-lg shadow-lg max-w-2xl mx-auto">

        <!-- Job Title (Dark classes hata di) -->
        <div class="mb-4">
            <label for="title" class="block text-sm font-bold text-gray-700 mb-2">Job Title</label>
            <input type="text" id="title" name="title" value="<%= job.title %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>

        <!-- Company (Dark classes hata di) -->
        <div class="mb-4">
            <label for="company" class="block text-sm font-bold text-gray-700 mb-2">Company</label>
            <input type="text" id="company" name="company" value="<%= job.company %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>
        
        <!-- Location (Dark classes hata di) -->
        <div class="mb-4">
            <label for="location" class="block text-sm font-bold text-gray-700 mb-2">Location</label>
            <input type="text" id="location" name="location" value="<%= job.location %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>

        <!-- Job Type (Dark classes hata di) -->
        <div class="mb-4">
            <label for="type" class="block text-sm font-bold text-gray-700 mb-2">Job Type</label>
            <select id="type" name="type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
                <option value="Full-Time" <%= job.type === 'Full-Time' ? 'selected' : '' %>>Full-Time</option>
                <option value="Contract" <%= job.type === 'Contract' ? 'selected' : '' %>>Contract</option>
                <option value="Internship" <%= job.type === 'Internship' ? 'selected' : '' %>>Internship</option>
            </select>
        </div>
        
        <!-- Job Description (Dark classes hata di) -->
        <div class="mb-4">
            <label for="description" class="block text-sm font-bold text-gray-700 mb-2">Job Description</label>
            <textarea id="description" name="description" rows="10" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required><%= job.description %></textarea>
        </div>

        <!-- Apply Link (Dark classes hata di) -->
        <div class="mb-6">
            <label for="applyLink" class="block text-sm font-bold text-gray-700 mb-2">Apply Link (External URL)</label>
            <input type="url" id="applyLink" name="applyLink" value="<%= job.applyLink || '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>

        <!-- Submit Button -->
        <div>
            <button type="submit" class="w-full bg-brand-green text-white font-bold py-3 px-6 rounded-lg hover:bg-green-700 transition-colors">
                Update Job
            </button>
        </div>

    </form>
</div>

<%- include('../partials/admin-footer') %>