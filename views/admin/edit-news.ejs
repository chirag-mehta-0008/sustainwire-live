<%- include('../partials/admin-header') %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-esg-dark mb-8">Edit Article</h1>

    <form action="/admin/news/edit/<%= article.id %>" method="POST" enctype="multipart/form-data" class="bg-white p-8 rounded-lg shadow-lg max-w-2xl mx-auto">

        <!-- ... (Title aur Category waise hi rahenge) ... -->
        <div class="mb-4">
            <label for="title" class="block text-sm font-bold text-gray-700 mb-2">Title</label>
            <input type="text" id="title" name="title" value="<%= article.title %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>
        <div class="mb-4">
            <label for="category" class="block text-sm font-bold text-gray-700 mb-2">Category</label>
            <input type="text" id="category" name="category" value="<%= article.category %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>

        <!-- Image Upload (YEH UPDATE HUA HAI) -->
        <div class="mb-4">
            <label for="imageUrl" class="block text-sm font-bold text-gray-700 mb-2">Change Featured Image (Optional)</label>
            <p class="text-sm text-gray-500 mb-2">Current Image:</p>
            <!-- Current Image Full URL se dikhega -->
            <img src="<%= article.imageUrl %>" alt="<%= article.title %>" class="h-24 w-32 object-cover rounded mb-2">
            <input type="file" id="imageUrl" name="imageUrl" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            <p class="text-sm text-gray-500 mt-1">Leave blank to keep the current image.</p>
        </div>

        <!-- ... (Content aur Button waise hi rahenge) ... -->
        <div class="mb-6">
            <label for="content" class="block text-sm font-bold text-gray-700 mb-2">Content</label>
            <textarea id="content" name="content" rows="10" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required><%= article.content %></textarea>
        </div>
        <div>
            <button type="submit" class="w-full bg-brand-green text-white font-bold py-3 px-6 rounded-lg hover:bg-green-700 transition-colors">
                Update Article
            </button>
        </div>
    </form>
</div>

<%- include('../partials/admin-footer') %>