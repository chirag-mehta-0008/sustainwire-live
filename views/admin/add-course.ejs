<%- include('../partials/admin-header') %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-esg-dark mb-8">Add New Course</h1>

    <form action="/admin/courses/add" method="POST" class="bg-white p-8 rounded-lg shadow-lg max-w-2xl mx-auto">

        <!-- Course Title -->
        <div class="mb-4">
            <label for="title" class="block text-sm font-bold text-gray-700 mb-2">Course Title</label>
            <input type="text" id="title" name="title" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>
        <!-- Provider -->
        <div class="mb-4">
            <label for="provider" class="block text-sm font-bold text-gray-700 mb-2">Provider</label>
            <input type="text" id="provider" name="provider" placeholder="e.g. Coursera / IIM Bangalore" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>
        <!-- Format -->
        <div class="mb-4">
            <label for="format" class="block text-sm font-bold text-gray-700 mb-2">Format</label>
            <input type="text" id="format" name="format" placeholder="e.g. Online | Self-Paced" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>
        <!-- Description -->
        <div class="mb-4">
            <label for="description" class="block text-sm font-bold text-gray-700 mb-2">Description</label>
            <textarea id="description" name="description" rows="5" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required></textarea>
        </div>
        
        <!-- YEH NAYA ADD HUA HAI (Course Link) -->
        <div class="mb-6">
            <label for="applyLink" class="block text-sm font-bold text-gray-700 mb-2">Course/Enroll Link (External URL)</label>
            <input type="url" id="applyLink" name="applyLink" placeholder="https://www.coursera.org/..." class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>

        <!-- Submit Button -->
        <div>
            <button type="submit" class="w-full bg-brand-green text-white font-bold py-3 px-6 rounded-lg hover:bg-green-700 transition-colors">
                Publish Course
            </button>
        </div>

    </form>
</div>

<%- include('../partials/admin-footer') %>