<%- include('../partials/admin-header') %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-esg-dark mb-8">Add New Article</h1>

    <!-- Form -->
    <!-- Zaroori: enctype="multipart/form-data" file upload ke liye -->
    <form action="/admin/news/add" method="POST" enctype="multipart/form-data" class="bg-white p-8 rounded-lg shadow-lg max-w-2xl mx-auto">

        <!-- Title -->
        <div class="mb-4">
            <label for="title" class="block text-sm font-bold text-gray-700 mb-2">Title (शीर्षक)</label>
            <input type="text" id="title" name="title" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>

        <!-- Category -->
        <div class="mb-4">
            <label for="category" class="block text-sm font-bold text-gray-700 mb-2">Category (श्रेणी)</label>
            <input type="text" id="category" name="category" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required>
        </div>

        <!-- Image Upload -->
        <div class="mb-4">
            <label for="imageUrl" class="block text-sm font-bold text-gray-700 mb-2">Featured Image (तस्वीर)</label>
            <input type="file" id="imageUrl" name="imageUrl" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
        </div>

        <!-- Content -->
        <div class="mb-6">
            <label for="content" class="block text-sm font-bold text-gray-700 mb-2">Content (खबर)</label>
            <textarea id="content" name="content" rows="10" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-green" required></textarea>
        </div>

        <!-- Submit Button -->
        <div>
            <button type="submit" class="w-full bg-brand-green text-white font-bold py-3 px-6 rounded-lg hover:bg-green-700 transition-colors">
                Publish Article
            </button>
        </div>

    </form>
</div>

</body>
</html>