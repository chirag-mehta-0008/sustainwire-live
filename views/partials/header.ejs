            <div class="flex justify-between items-center h-20">
                <div class="flex-shrink-0 flex items-center">
                    <a href="/" class="text-3xl font-extrabold gradient-text">SustainWire</a>
                </div>
                <div class="hidden sm:block sm:ml-6">
                    <div class="flex space-x-6 items-center">
                        <a href="/news" class="text-gray-700 hover:text-brand-green font-medium transition-colors dark:text-gray-300 dark:hover:text-brand-green">News</a>
                        <a href="/jobs" class="text-gray-700 hover:text-brand-green font-medium transition-colors dark:text-gray-300 dark:hover:text-brand-green">Jobs</a>
                        <a href="/events" class="text-gray-700 hover:text-brand-green font-medium transition-colors dark:text-gray-300 dark:hover:text-brand-green">Events</a>
